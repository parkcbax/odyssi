# Database Connection
# Replace with your PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/odyssi_db"

# Authentication
# Generate a random secret using: openssl rand -base64 32
AUTH_SECRET="your-secret-here"

# Initial Admin Configuration
# This email will be seeded as the primary admin on first run
ADMIN_EMAIL="admin@odyssi.com"
